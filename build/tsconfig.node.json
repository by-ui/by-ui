/**
 * config for node-ts
 */
 {
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "target": "es6",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "inlineSources": false,
        "suppressImplicitAnyIndexErrors": true,
        "lib": ["es2015"]
    },
    "exclude": ["node_modules", "**/*.spec.ts"]
}
